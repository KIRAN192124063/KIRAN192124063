#include <stdio.h>

int main()
{
    int i, j, N;

    printf("Enter N: ");
    scanf("%d", &N);

    for(i=N; i>=1; i--)
    {
        for(j=1; j<=i; j++)
        {
            printf("0.%d ", i);
        }

        printf("\n");
    }

    return 0;

}

Enter N: 4
0.4 0.4 0.4 0.4 
0.3 0.3 0.3 
0.2 0.2 
0.1
