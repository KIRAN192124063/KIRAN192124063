#include<stdio.h>
int main()
{
    int a,b,c,sum,sub,mul,div;
    printf("1 for Addition\n");
    printf("2 for subraction\n");
    printf("3 for multiplication\n");
    printf("4 for division\n");
    scanf("%d",&c);
    printf("enter the first number:");
    scanf("%d",&a);
    printf("enter the second number:");
    scanf("%d",&b);
    if(c==1){
    sum=a+b;
    printf("the result of the values are: %d ",sum);}
   else if(c==2){
        sub=a-b;
        printf("the result of the values are:%d",sub);}
       else if(c==3){
            mul=a*b;
            printf("the results of the values are:%d",mul);}
            else if(c==4){
                div=a/b;
                printf("the results of the values are:%d",div);}
}
